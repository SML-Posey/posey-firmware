menuconfig BNO08X
	bool "BNO080/5/6 IMU"
	depends on SPI
	help
	  Enable driver for BNO080/5/6 IMU sensor. The CEVA SH2 interface is to be used
	  directly, since translating that to Zephyr's sensor API would be cumbersom and
	  inefficient. The driver only implements the SPI bus at this time.

if BNO08X

config BNO08X_BUS_SPI
	bool "BNO08X driver support for SPI bus"
	default y
	depends on $(dt_compat_on_bus,$(DT_COMPAT_CEVA_BNO08X),spi)
	select SPI

endif # BNO08X
